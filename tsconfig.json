{
  "compilerOptions": {
    "rootDir": "src",  // 源代码的根目录
    "outDir": "dist",  // 编译后输出的目录
    "strict": true,  // 启用所有严格的类型检查选项
    "target": "es6",  // 编译后的 JavaScript 目标版本为 ECMAScript 6
    "module": "commonjs",  // 使用 CommonJS 模块系统
    "sourceMap": true,  // 生成源映射文件，用于在调试时将编译后的代码映射回源代码
    "esModuleInterop": true,  // 启用对 ES 模块与 CommonJS 模块之间的互操作性的支持
    "moduleResolution": "node"  // 使用 Node.js 风格的模块解析策略
  }
}